<div class="field">
  <%= form.text_field :name %>
</div>

<div class="field">
  <%= form.text_field :first_surname %>
</div>

<div class="field">
  <%= form.text_field :second_surname %>
</div>

<div class="field">
  <%= form.select :document_type, handler.document_types_for_select, prompt: true %>
</div>

<div class="field">
  <%= form.text_field :document_number %>
</div>

<div class="field date">
  <%= form.date_select :date_of_birth, start_year: 1900, end_year: 14.years.ago.year, default: 35.years.ago, prompt: { day: t(".date_select.day"), month: t(".date_select.month"), year: t(".date_select.year") } %>
</div>

<div class="field">
  <%= form.select :province_id, handler.provinces_for_select, prompt: true %>
</div>

<div class="field">
  <%= form.check_box :personal_data_access_consent %>
</div>

<%= form.hidden_field :handler_name %>
