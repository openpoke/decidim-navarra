<div class="mini-footer">
  <div class="row">
    <div class="medium-5 large-3 column logo-navarra-footer-container">
      <a href="https://navarra.es/<%= I18n.locale %>">
        <div class="logo-navarra-footer-detail">
          <div class="logo-navarra-footer-detail-red"></div>
          <div class="logo-navarra-footer-detail-blue"></div>
        </div>
        <%= image_pack_tag("media/images/logo-navarra-footer.png", class: 'logo-gobierno-navarra-footer', alt: t("layouts.decidim.footer.cc_by_license")) %>
      </a>
    </div>
    <div class="medium-5 large-9 column">
      <div class="navarra-footer-menu">
        <ul class="footer-nav">
          <% organization_pages = current_organization.static_pages_accessible_for(current_user) %>
          <% if organization_pages.any? %>
            <% current_organization.static_page_topics.where(show_in_footer: true).each do |page_topic| %>
              <% topic_pages = page_topic.accessible_pages_for(current_user) %>
              <% if topic_pages.any? %>
                <li class="navarra-footer-menu-element"><%= link_to translated_attribute(page_topic.title), decidim.page_path(topic_pages.first) %></li>
              <% end %>
            <% end %>

            <% organization_pages.where(show_in_footer: true).each do |page| %>
              <li class="navarra-footer-menu-element"><%= link_to translated_attribute(page.title), decidim.page_path(page) %></li>
            <% end %>
          <% end %>
          <li class="navarra-footer-menu-element"><a href="https://www.navarra.es/home_<%= I18n.locale %>/Indices/Sugerencias/"><%= t('footer_menu.contact') %></a>
          <li class="navarra-footer-menu-element"><a href="/users/sign_in" class="navarra-footer-menu-element"><%= t('footer_menu.users') %></a></li>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
