<% if organization %>
  <%= link_to decidim.root_url(host: organization.host), title: t("logo", scope: "decidim.accessibility", organization: organization.name) do %>
    <% if organization.logo.present? %>
      <%= image_tag organization.attached_uploader(:logo).variant_path(:medium), alt: t("logo", scope: "decidim.accessibility", organization: organization.name) %>
    <% else %>
      <div class="logo-wrapper-open-government-left">
        <a href="https://gobiernoabierto.navarra.es/<%= I18n.locale %>/<%= t('transparency') %>">
          <%= image_pack_tag 'media/images/balloon_logo.png' %>
        </a>
      </div>
      <div class="logo-wrapper-open-government-right">
        <a href="https://gobiernoabierto.navarra.es/<%= I18n.locale %>/" class="logo-wrapper-open-government">
          <%= t('open_government') %>
        </a>
        <a class="logo-wrapper-open-government-links" href="https://gobiernoabierto.navarra.es/<%= I18n.locale %>/<%= t('transparency') %>"><%= t('transparency') %></a>
        <span class="logo-wrapper-open-government-transparency"><%= t('participation') %></span>
        <a class="logo-wrapper-open-government-links" href="https://gobiernoabierto.navarra.es/<%= I18n.locale %>/open-data"><%= t('open_data') %></a>
      </div>
    <% end %>
  <% end %>
<% else %>
  <%= Decidim.application_name %>
<% end %>
