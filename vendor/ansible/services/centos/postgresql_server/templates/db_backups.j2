#!/bin/bash

DB_BACKUPS_FOLDER="{{backups_folder}}/db"

d=`date '+%Y%m%d%H%M'`
databases=`psql -t -P format=unaligned -c "select datname from pg_database where datistemplate = false" -U postgres`

for db_name in $databases
do
  mkdir -p $DB_BACKUPS_FOLDER/$db_name
  pg_dump -U postgres -Fc -f $DB_BACKUPS_FOLDER/$db_name/$db_name-$d.dump -Z 9 -U postgres $db_name
done
