check process postgresql with pidfile /var/lib/pgsql/{{postgres_version}}/data/postmaster.pid
  start program "/usr/bin/systemctl start postgresql-{{postgres_version}}"
  stop  program "/usr/bin/systemctl stop postgresql-{{postgres_version}}"
  if failed port {{pg_port}} with timeout 10 seconds then restart
  if 5 restarts within 5 cycles then timeout
