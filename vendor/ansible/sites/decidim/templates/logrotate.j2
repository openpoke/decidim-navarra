{{app_base_path}}/shared/log/{{rails_env}}.log {
    su {{app_user}} {{app_group}}
    create 0777 {{app_user}} {{app_group}}
    daily
    rotate {{logrotate_frequency}}
    compress
    dateext
    missingok
    notifempty
    sharedscripts
    postrotate
        touch {{app_base_path}}/current/tmp/restart.txt
    endscript
}

{{app_base_path}}/shared/log/sidekiq.log {
    su {{app_user}} {{app_group}}
    create 0777 {{app_user}} {{app_group}}
    daily
    rotate {{logrotate_frequency}}
    compress
    dateext
    missingok
    notifempty
    sharedscripts
    postrotate
    	monit restart -g decidim-sidekiq
    endscript
}
