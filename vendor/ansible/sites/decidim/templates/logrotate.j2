{{app_base_path}}/shared/log/{{rails_env}}.log {
    su {{app_user}} {{app_user}} 
    daily
    rotate {{logrotate_frequency}}
    compress
    dateext
    missingok
    notifempty
    sharedscripts
    postrotate
        touch {{app_base_path}}/current/tmp/restart.txt
    endscript
}

{{app_base_path}}/shared/log/sidekiq.log {
    su {{app_user}} {{app_user}} 
    daily
    rotate {{logrotate_frequency}}
    compress
    dateext
    missingok
    notifempty
    sharedscripts
    postrotate
        source /etc/bashrc
        cd {{app_base_path}}/current
        bundle exec sidekiqctl stop {{app_base_path}}/shared/tmp/pids/sidekiq-0.pid
    endscript
}
