server {
  listen      80;
  server_name {% for domain in sites_domains %} {{domain}}{% endfor %};

  passenger_enabled on;
  client_max_body_size 50M;

  access_log /var/log/nginx/{{app_id}}_access.log;
  error_log  /var/log/nginx/{{app_id}}_error.log;

  root {{app_base_path}}/current/public;

  # Let's encrypt
  location /.well-known {
  }
}
